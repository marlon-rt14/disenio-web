<div class="container mt-3">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Update Note</h3>
        </div>
        <div class="card-body">
          <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="post" class="mb-0">
					{{!-- <input type="hidden" name="_method" value="PUT"> --}}
            <div class="mb-3">
              <input
                type="text"
                name="title"
                class="form-control"
                placeholder="Title"
                autofocus
								value="{{note.title}}"
              />
            </div>
            <div class="mb-3">
              <textarea
                name="description"
                class="form-control"
                placeholder="Description"
              >{{note.description}}</textarea>
            </div>
            <div class="d-grid">
              <button class="btn btn-primary">Save</button>
            </div>
          </form>
        </div
      </div>
    </div>
  </div>
</div>