<div class="container mt-3">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>New Note</h3>
        </div>
        <div class="card-body">
          <form action="/notes/new-note" method="post" class="mb-0">
            <div class="mb-3">
              <input
                type="text"
                name="title"
                class="form-control"
                placeholder="Title"
                autofocus
              />
            </div>
            <div class="mb-3">
              <textarea
                name="description"
                class="form-control"
                placeholder="Description"
              ></textarea>
            </div>
            <div class="d-grid">
              <button class="btn btn-primary btn-block">Save</button>
            </div>
          </form>
        </div
      </div>
    </div>
  </div>
</div>