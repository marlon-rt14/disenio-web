<div class="container mt-3">
  <div class="row">
    {{#each notes}}
      <div class="col-md-4">
        <div class="card shadow" style="border-radius: 16px;">
          <div class="card-body">
            <div class="mb3">
              <h3
                class="d-flex justify-content-between align-items-center"
              >{{title}}<a href="/notes/edit/{{_id}}"><i
                    class="fas fa-pen-square"
                  ></i></a></h3>

            </div>
            <div class="mb-3">
              <p>{{description}}</p>
            </div>
            <div class="">
              <form
                action="/notes/delete/{{_id}}?_method=DELETE"
                method="post"
                class="mb-0"
              >
                <div class="d-grid">
                  <button class="btn btn-danger">Delete</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    {{else}}
      <div class="col-md-3 mx-auto">
        <div class="card text-center">
          <div class="card-body">
            <div class="mb-3">
              <h1>Hello {{user.name}}</h1>
            </div>
            <div class="mb-3">
              <p class="lead">There are not notes yet</p>
            </div>
            <div class="d-grid">
              <a href="/notes/add" class="btn btn-success">Create One!</a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>